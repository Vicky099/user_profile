<h4>User Profile</h4>

<table>
	<tr>
		<td>
			Image
		</td>
		<td>
			<%= image_tag(@user.avatar.url, size: '100') %>
		</td>
	</tr>

	<tr>
		<td>
			Name
		</td>
		<td>
			<%= @user.name %>
		</td>
	</tr>

	<tr>
		<td>
			Email
		</td>
		<td>
			<%= @user.email %>
		</td>
	</tr>

	<tr>
		<td>
			Address
		</td>
		<td>
			<%= @user.address %>
		</td>
	</tr>

	<tr>
		<td>
			Mobile Number
		</td>
		<td>
			<%= @user.mobile_number %>
		</td>
	</tr>

</table>
